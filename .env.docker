NODE_ENV=production
PORT=4010
LOG_LEVEL=info
CORS_ORIGIN=*
BASE_URL=http://localhost:4010

# Auth
JWT_SECRET=please-change-this-to-a-very-long-32char-secret-123456
JWT_EXPIRES_IN=24h
TEST_API_KEY=test-api-key-123

# MongoDB (Compose service name: mongo)
MONGODB_URI=mongodb://myuser:mypassword@mongodb-postgresql-redis:27017/mydatabase

# PostgreSQL (Compose service name: postgres)
POSTGRES_HOST=mongodb-postgresql-redis
POSTGRES_PORT=5432
POSTGRES_DB=testdb
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Prisma URL (mirrors above Postgres settings)
DATABASE_URL=postgresql://postgres:password@mongodb-postgresql-redis:5432/testdb?schema=public

# Redis
REDIS_HOST=mongodb-postgresql-redis
REDIS_PORT=6379

# Feature flags
USE_PRISMA=false
DISABLE_RATE_LIMIT=true
